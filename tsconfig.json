{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./layers/nodejs/node_modules",
    "typeRoots": ["layers/nodejs/node_modules/@types"]
  },
  "include": ["hello-world/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
